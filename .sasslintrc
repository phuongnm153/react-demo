{
  "options": {
    "formatter": "stylish"
  },
  "files": {
    "include": "resources/sass/*.s+(a|c)ss",
    "ignore": [
      "public/**/*.*"
    ]
  },
  "rules": {
    "extends-before-mixins": 2,
    "extends-before-declarations": 2,
    "placeholder-in-extend": 2,
    "mixins-before-declarations": [
      2,
      {
        "exclude": [
          "breakpoint",
          "mq"
        ]
      }
    ],
    "no-warn": 1,
    "no-debug": 1,
    "no-ids": 2,
    "no-important": 2,
    "indentation": [
      2,
      {
        "size": 2
      }
    ],
    "leading-zero": 0,
    "property-sort-order": [
      1,
      {
        "order": [
          "display",
          "margin"
        ],
        "ignore-custom-properties": true
      }
    ],
    "quotes": 0,
    "trailing-semicolon": 0,
    "variable-for-property": [
      2,
      {
        "properties": [
          "margin",
          "content"
        ]
      }
    ]
  }
}